{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fred/portfolio/home/data-access": ["libs/portfolio/home/data-access/src/index.ts"],
      "@fred/portfolio/home/feature": ["libs/portfolio/home/feature/src/index.ts"],
      "@fred/portfolio/shell/feature": ["libs/portfolio/shell/feature/src/index.ts"],
      "@fred/portfolio/shell/ui/navigation": ["libs/portfolio/shell/ui/navigation/src/index.ts"],
      "@fred/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@fred/shared/util/common-extensions/decorators": [
        "libs/shared/util/common-extensions/decorators/src/index.ts"
      ],
      "@fred/shared/util/common-extensions/ng-model-extension": [
        "libs/shared/util/common-extensions/ng-model-extension/src/index.ts"
      ],
      "@fred/shared/util/common-extensions/ng-rx-extensions": [
        "libs/shared/util/common-extensions/ng-rx-extensions/src/index.ts"
      ],
      "@fred/shared/util/functions": ["libs/shared/util/functions/src/index.ts"],
      "@fred/shared/util/loading": ["libs/shared/util/loading/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
